{
  "name": "mvc-arch",
  "version": "1.0.0",
  "description": "API de Gerenciamento Financeiro",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "ts-node src/app.ts",
    "dev:test": "NODE_ENV=test ts-node src/app.ts",
    "dev:watch": "ts-node-dev --respawn --pretty --transpile-only src/app.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "test": "vitest",
    "test:unit": "vitest run \"tests/unit/**/*.spec.{ts,js}\"",
    "test:e2e": "vitest --config vitest.config.e2e.ts",
    "coverage:e2e": "vitest --config vitest.config.e2e.ts --coverage",
    "coverage": "vitest run --coverage",
    "load:test": "docker run --rm -i --network host grafana/k6 run - < metrics/performance/k6/load-test-v2.js",
    "analyze": "ts-node metrics/quality/ts-morph/usage_example.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.5.2",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "cross-env": "^10.0.0",
    "prisma": "^5.0.0",
    "supertest": "^7.1.4",
    "ts-morph": "^27.0.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6",
    "unplugin-swc": "^1.5.7",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "vitest-tsconfig-paths": "^3.4.1"
  }
}
